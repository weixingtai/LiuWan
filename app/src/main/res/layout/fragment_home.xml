<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".ui.home.HomeFragment"
    android:layout_marginBottom="60dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.youth.banner.Banner
            android:id="@+id/homeBanner"
            android:layout_width="match_parent"
            android:layout_height="230dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/homeCvSearch"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="-50dp"
            android:layout_below="@id/homeBanner">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/homeTvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:text="选车"
                    android:textSize="@dimen/size_hint" />

                <RelativeLayout
                    android:id="@+id/homeRlLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/homeTvLocation">
                    <EditText
                        android:id="@+id/homeEtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_hint"
                        android:hint="广州市"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/homeTvLocationLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="当前位置"
                        android:textSize="@dimen/size_explain"
                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@id/homeEtLocation"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location"
                        android:layout_toLeftOf="@id/homeTvLocationLabel"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:id="@+id/homeLineLocation"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#8a000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/homeRlLocation"
                    />
                <RelativeLayout
                    android:id="@+id/homeRlBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/homeLineLocation">
                    <EditText
                        android:id="@+id/homeEtBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_hint"
                        android:hint="凯美瑞"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/homeTvBrandLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="汽车型号"
                        android:textSize="@dimen/size_explain"
                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@id/homeEtBrand"/>
                    <View
                        android:layout_width="1px"
                        android:layout_height="10dp"
                        android:background="#8a000000"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/homeTvBrandLabel"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:id="@+id/homeLineBrand"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#8a000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/homeRlBrand"
                    />
                <Button
                    android:id="@+id/homeBtnSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@id/homeLineBrand"
                    android:text="搜索车源"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/homeBtnSearch"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_personal"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="车主个人车源"
                        android:textSize="8sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/homeBtnSearch"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cooperation"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="与车主直接沟通"
                        android:textSize="8sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/homeBtnSearch"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_no_extra_money"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="没有中间商赚差价"
                        android:textSize="8sp"/>
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <GridLayout
            android:id="@+id/homeGlTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeCvSearch"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintVertical_bias="0.8"
            android:rowCount="2"
            android:columnCount="4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center"
                android:src="@drawable/ic_qq"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="购车技巧"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="@dimen/size_hint"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_qq"
                android:layout_gravity="center"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="各地政策"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="@dimen/size_hint"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_qq"
                android:layout_gravity="center"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="各地政策"
                android:layout_column="2"
                android:layout_row="1"
                android:textSize="@dimen/size_hint"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_qq"
                android:layout_gravity="center"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_column="3"
                android:layout_row="1"
                android:text="各地政策"
                android:textSize="@dimen/size_hint"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/homeGlTip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随便溜溜"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/homeRcvRecommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>